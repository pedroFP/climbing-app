
<div class="row">
  <div class="col-lg-6 col-sm-12">
    <div class="d-flex justify-content-between align-items-center my-4">
      <%= render @climbing_place %>
    </div>
    <%= link_to "Back to climbing places", climbing_places_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>

  <div class="col-lg-6 col-sm-12">
    <div class="d-flex justify-content-between align-items-center my-4">
      <div 
        id="map" 
        style="height: 400px; width: 100%;" 
        data-controller="map" 
        data-map-latitude-value="<%= @climbing_place.latitude %>" 
        data-map-longitude-value="<%= @climbing_place.longitude %>">
      </div>
    </div>
  </div>
</div>

