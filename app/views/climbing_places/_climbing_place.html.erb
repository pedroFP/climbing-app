<div class="card mb-3 shadow-sm" id="<%= dom_id climbing_place %>">
  <div class="card-body">
    <h5 class="card-title d-flex justify-content-between align-items-center">
      <span><%= climbing_place.name %></span>
    </h5>
    <p class="card-text text-muted mb-2">
      <i class="bi bi-geo-alt"></i> <%= climbing_place.address %>
    </p>
    <p class="card-text" >
      <%= climbing_place.description %>
    </p>
    <div class="d-flex">
      <%= link_to "Edit this climbing place", edit_climbing_place_path(climbing_place), class: "btn btn-outline-primary btn-sm me-2" %>
      <%= button_to "Destroy this climbing place", climbing_place, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
